#include<iostream>
using namespace std;

int main()
{
    int n;
    cin>>n;
    for(int i=0;i<n/2+1;i++)
    {
        for(int space=0;space<i;space++)
            cout<<"  ";
        for(int j=0;j<n/2+1-i;j++)
            cout<<'*';
        cout<<endl;
    }
    for(int i=n/2;i>0;i--)
    {
        for(int space=0;space<i-1;space++)
            cout<<"  ";
        for(int j=n/2;j>=i-1;j--)
            cout<<"*";
        cout<<endl;
    }
    return 0;
}
